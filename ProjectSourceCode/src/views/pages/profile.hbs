<!-- Profile Page Template (profile.hbs) -->
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <h3>Settings</h3>
            <div class="d-grid gap-2">
                <button class="btn btn-outline-dark" type="button">Profile</button>
                <button type="button" onclick="location.href='/profileEditor'" class="btn btn-outline-dark">Account Settings</button>
            </div>
        </div>
        <div class="col-md-5">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <!-- Image is updated here to show user's image or a default one -->
                    <div class="col d-flex justify-content-center">
                        <img class="rounded-circle mt-5" src="{{#if user.profile_image}}{{user.profile_image}}{{else}}img/profile_image.jpg{{/if}}" width="200" height="200">
                    </div>
                </div>
            </div>
        </div>
        <div class="center">
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <!-- Name -->
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">First Name</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">{{user.first_name}}</p>
                            </div>
                        </div>
                        <hr>
                        <!-- Last Name -->
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Last name</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">{{user.last_name}}</p>
                            </div>
                        </div>
                        <hr>
                        <!-- Email -->
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Email</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">{{user.email}}</p>
                            </div>
                        </div>
                        <hr>
                        <!-- Phone -->
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Phone</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">{{user.phone_number}}</p>
                            </div>
                        </div>
                        <hr>
                        <!-- Address -->
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Address</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">{{user.address}}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
