{{#if searchHistory.length}}
  <div class="row">
    {{#each searchHistory}}
      <div class="col-md-4 mb-3">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title">{{from_currency}} to {{to_currency}}</h5>
            <p class="card-text">{{amount}} = {{converted_amount}}</p>
            <p class="card-text"><small class="text-muted">{{created_at}}</small></p>
            <a href="/currency_converter?from={{from_currency}}&to={{to_currency}}" class="btn btn-primary">Convert Again</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
  <div class="chart-container" style="position: relative;">
      <div id="charts"></div>
  </div>
{{else}}
  <p class="text-center">User has no conversion history.</p>
{{/if}}

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="/js/script.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    loadCurrencyData();
  });
</script>
