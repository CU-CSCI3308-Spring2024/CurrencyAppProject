{{#if searchHistory.length}}
  <div class="row">
    {{#each searchHistory}}
      <div class="col-md-4 mb-3">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title">{{from_currency}} to {{to_currency}}</h5>
            <p class="card-text">{{amount}} -> {{converted_amount}}</p>
            <p class="card-text"><small class="text-muted">{{created_at}}</small></p>
            <!-- Updated link to not include the 'amount' in the query -->
            <a href="/currency_converter?from={{from_currency}}&to={{to_currency}}" class="btn btn-primary">Convert Again</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <p class="text-center">No conversion history available.</p>
{{/if}}
