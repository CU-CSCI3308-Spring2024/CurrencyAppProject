<div class="container mt-5">
    <h1 class="text-center mb-3">Latest News On Currency Exchange</h1>
    {{#if articles}}
        <div class="row" style="display: flex; flex-wrap: wrap; justify-content: center; gap: 20px; margin-top: 40px;">
            {{#each articles}}
                <div class="news-item" style="flex: 1 0 47%; margin-bottom: 20px; display: flex; align-items: flex-start; gap: 20px; padding: 10px; max-width: 640px;">
                    <img src="{{image}}" alt="{{title}}" class="news-image" style="width: 200px; height: auto; flex-shrink: 0;">
                    <div style="flex-grow: 1;">
                        <strong>{{title}}</strong> - {{description}}
                        <br>
                        <a href="{{url}}" target="_blank" class="btn btn-primary mt-2">Read more</a>
                    </div>
                </div>
            {{/each}}
        </div>
    {{else}}
        <p class="text-center">No news articles found.</p>
    {{/if}}
</div>